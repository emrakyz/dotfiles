#!/bin/bash

exec &> /dev/null

while read -r arg; do
	# first try matching by filename or pathname
	case "${arg,,}" in
		http*)
			$BROWSER "$(echo "$(echo "$arg" | awk '{for (i=2; i<NF; i++) printf $i " "; print $NF}')")" &
			;;
		[^/]*) # doesn't start with '/'
			sh -c "$arg"
			;;
		*.txt)
			$TERMINAL $EDITOR "$arg" &
			;;
		*.mp4|*.mkv|*.m4v|*.avi|*.mov)
			mpv "$arg" &
			;;
		*.pdf | *.epub)
			zathura "$arg" &
			;;
		*.mp3)
			$TERMINAL mpv "$arg" &
			;;
		*.od[tsp]|*.doc|*.docx|*.ppt|*.pptx|*.xls|*.xlsx)
			libreoffice "$arg" &
			;;
		*)
			# then try matching by mimetype
			mimetype=$(file -Lb --mime-type "$arg")
			case "$mimetype" in
				text/html)
					$BROWSER "$arg" &
					;;
				text/* | inode/x-empty | message/rfc822)
					$TERMINAL $EDITOR "$arg" &
					;;
				inode/directory)
					cd "$arg"
					$TERMINAL &
					cd -
					;;
				image/*)
					imv -f "$arg" &
					;;
				*)
					exit 1
					;;
			esac
			;;
	esac
done
